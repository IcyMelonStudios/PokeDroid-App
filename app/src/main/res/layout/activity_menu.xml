<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="net.icymelon.pokedroid_pe.pokedroidpe.MenuActivity"
    android:background="@drawable/material_bg">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="170dp"
        android:id="@+id/header_container"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">

        <ImageView
            android:layout_width="300dp"
            android:layout_height="200dp"
            android:id="@+id/imageView"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/logo_material" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="v1.6"
            android:id="@+id/textView7"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="45dp"
            android:textColor="#FFF"
            android:textStyle="bold" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/header_container"
        android:id="@+id/content_main">

        <Button
            android:layout_width="fill_parent"
            android:layout_height="70dp"
            android:text="Play"
            android:id="@+id/button3"
            android:layout_marginTop="10dp"
            android:background="@drawable/pbtn_thin"
            android:textColor="#FFF"
            style="?android:attr/borderlessButtonStyle"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:onClick="click_play"
            android:clickable="true"
            android:textStyle="bold"
            android:textSize="18dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="70dp"
            android:text="Connect"
            android:id="@+id/button4"
            android:layout_below="@+id/button3"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:background="@drawable/pbtn_thin"
            android:textColor="#FFF"
            style="?android:attr/borderlessButtonStyle"
            android:onClick="click_server"
            android:clickable="true"
            android:textStyle="bold"
            android:textSize="18dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="70dp"
            android:id="@+id/button5"
            android:layout_below="@+id/button4"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:background="@drawable/pbtn_thin"
            android:textColor="#FFF"
            android:text="Shop"
            style="?android:attr/borderlessButtonStyle"
            android:onClick="click_shop"
            android:clickable="true"
            android:textStyle="bold"
            android:textSize="18dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="70dp"
            android:id="@+id/button6"
            android:background="@drawable/pbtn_thin"
            android:textColor="#FFF"
            android:text="About"
            android:layout_below="@+id/button5"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            style="?android:attr/borderlessButtonStyle"
            android:onClick="click_links"
            android:clickable="true"
            android:textStyle="bold"
            android:textSize="18dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="70dp"
            android:id="@+id/button7"
            android:background="@drawable/pbtn_thin"
            android:textColor="#FFF"
            android:text="Donate"
            android:layout_below="@+id/button6"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="5dp"
            style="?android:attr/borderlessButtonStyle"
            android:onClick="click_donate"
            android:clickable="true"
            android:textStyle="bold"
            android:textSize="18dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp" />
    </RelativeLayout>
</RelativeLayout>
    </ScrollView>

</RelativeLayout>
